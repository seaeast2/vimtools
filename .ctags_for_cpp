########################################################
# C++ 최적화 설정
########################################################

--languages=+C++,+C
--langmap=C++:+.cpp.cxx.cc.CPP.hxx.hh.hpp.hh.inl.ipp.tpp

# 무시할 디렉토리
--exclude=build
--exclude=dist
--exclude=out
--exclude=bin
--exclude=obj
--exclude=.git
--exclude=.vscode

########################################################
# C++ 클래스/구조체/네임스페이스
########################################################

# Class
--regex-C++=/^[ \t]*class[ \t]+([A-Za-z_][A-Za-z0-9_]*)/\1/c,class/

# Struct
--regex-C++=/^[ \t]*struct[ \t]+([A-Za-z_][A-Za-z0-9_]*)/\1/s,struct/

# Namespace
--regex-C++=/^[ \t]*namespace[ \t]+([A-Za-z_][A-Za-z0-9_]*)/\1/n,namespace/

########################################################
# 함수 / 메서드
########################################################

# 일반 함수 정의
--regex-C++=/^[ \t]*[A-Za-z0-9_:<>~*&]+[ \t]+([A-Za-z_][A-Za-z0-9_:]*)[ \t]*\([^;]*\)[ \t]*\{/\1/f,function/

# 클래스 스코프 함수 정의 (예: ClassName::func)
--regex-C++=/^[ \t]*[A-Za-z0-9_:<>~*&]+[ \t]+([A-Za-z_][A-Za-z0-9_:]*)::([A-Za-z_][A-Za-z0-9_]*)/\1::\2/m,method/

########################################################
# 템플릿 & 함수
########################################################

# template<typename T> class Foo
--regex-C++=/^[ \t]*template[ \t]*<[^>]+>[ \t]*class[ \t]+([A-Za-z_][A-Za-z0-9_]*)/\1/t,template_class/

# template<typename T> returnType func(...)
--regex-C++=/^[ \t]*template[ \t]*<[^>]+>[ \t]*[A-Za-z0-9_:<>~*&]+[ \t]+([A-Za-z_][A-Za-z0-9_]*)[ \t]*\(/\\1/t,template_func/

########################################################
# Enum / Typedef / Using
########################################################

# Enum
--regex-C++=/^[ \t]*enum[ \t]+([A-Za-z_][A-Za-z0-9_]*)/\1/e,enum/

# Typedef
--regex-C++=/^[ \t]*typedef[ \t]+[A-Za-z0-9_:<>~*&]+[ \t]+([A-Za-z_][A-Za-z0-9_]*)/\1/t,typedef/

# Using alias
--regex-C++=/^[ \t]*using[ \t]+([A-Za-z_][A-Za-z0-9_]*)[ \t]*=/\1/u,using/

########################################################
# 매크로
########################################################

--regex-C++=/^[ \t]*#define[ \t]+([A-Za-z_][A-Za-z0-9_]*)/\1/d,macro/

########################################################
# 전역 변수
########################################################

--regex-C++=/^[ \t]*[A-Za-z0-9_:<>~*&]+[ \t]+([A-Za-z_][A-Za-z0-9_]*)[ \t]*=[^;]*;/\1/v,variable/

########################################################
# 기타
########################################################

# 파일별 태그 생성 방식
--fields=+iaknS
--extras=+q
--kinds-C++=+p

